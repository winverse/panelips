{
  "name": "panelips",
  "version": "1.0.0",
  "description": "Platform for YouTube panelists to share their expertise",
  "author": "public.winverse@gmail.com",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "test:all": "turbo run test",
    "clean": "shx rm -rf ./node_modules ./apps/*/node_modules ./packages/*/node_modules ./apps/*/dist ./packages/*/dist"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "bun-types": "^1.2.17",
    "turbo": "^2.5.4",
    "typescript": "^5.5.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.15"
}
