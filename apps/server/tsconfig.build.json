{
  "extends": "@packages/tsconfig/nest-config.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@filters/*": ["./src/common/filters/*"],
      "@interfaces/*": ["./src/common/interfaces/*"],
      "@constants/*": ["./src/common/constants/*"],
      "@modules/*": ["./src/modules/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["./src/*"],
  "exclude": ["./dist"]
}
